<table class="table">
  <thead>
  <tr>
    <th scope="col">date</th>
    <th scope="col">participant</th>
    <th scope="col">snack</th>
  </tr>
  </thead>
  <tbody>
  <% @games.each do |game| %>
    <tr>
      <th><%= game.game_date %></th>
      <% game.participants.each do |participant| %>
        <th><%= participant.name %></th>
      <% end %>
      <% game.snacks.each do |snack| %>
        <th><%= snack.name %></th>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

